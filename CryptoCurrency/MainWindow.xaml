<Window x:Class="CryptoCurrency.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoCurrency"
          
        mc:Ignorable="d"
        Title="Crypto currencies" Height="450" Width="800">
     
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Height="40">
            <Button Content="Top 10" Width="100" Click="Btn_Top_Click"/>
            <Button Content="Info" Width="100" Click="Btn_Info_Click"/>
            <Button Content="Search" Width="100" Click="Btn_Search_Click" />
            <Button Content="Chart" Width="100" Click="Btn_Chart_Click" Visibility="Hidden"/>
            <Button Content="Converter" Width="100" Click="Btn_Converter_Click" Visibility="Hidden"/>                       
        </StackPanel>

        <Frame Grid.Row="1" x:Name="Main"/>            
                            
        </Grid> 

</Window>
